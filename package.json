{
    "name": "express-authorshaven",
    "version": "1.0.0",
    "description": "A Social platform for the creative at heart",
    "main": "index.js",
    "scripts": {
        "pretest": "NODE_ENV=test npm run set:test",
        "set:test": "sequelize db:migrate:undo:all && sequelize db:migrate",
        "test": "NODE_ENV=test nyc --require @babel/register --require @babel/polyfill mocha src/test/**.spec.js --timeout 20000 --exit",
        "lint": "eslint **/*.js",
        "lint:fix": "prettier-eslint \"**/*.{js,json}\" --write",
        "prettier": "prettier **/*.{js,json} --write",
        "coverage": "nyc report --reporter=text-lcov | coveralls",
        "build:server": "babel src --copy-files --out-dir build",
        "build": "npm run build:server",
        "start": "node build/index.js",
        "start:dev": "nodemon --exec babel-node src/index"
    },
    "nyc": {
        "exclude": [
            "**/*.spec.js",
            "**/test/utils",
            "**/helpers/passport/"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "npm run prettier",
            "git add ."
        ]
    },
    "author": "Andela Simulations Programme",
    "license": "MIT",
    "dependencies": {
        "@sendgrid/mail": "^6.4.0",
        "bcrypt": "^5.0.0",
        "body-parser": "^1.18.3",
        "chai": "^4.2.0",
        "chai-http": "^4.3.0",
        "cookie-session": "^1.3.3",
        "cors": "^2.8.4",
        "dotenv": "^6.2.0",
        "express": "^4.16.3",
        "express-jwt": "^5.3.1",
        "express-session": "^1.15.6",
        "faker": "^4.1.0",
        "joi": "^14.3.1",
        "jsonwebtoken": "^8.5.1",
        "lint-staged": "^8.2.1",
        "morgan": "^1.9.1",
        "nock": "^10.0.6",
        "passport": "^0.4.0",
        "passport-facebook": "^3.0.0",
        "passport-github": "^1.1.0",
        "passport-github2": "^0.1.11",
        "passport-google-oauth20": "^2.0.0",
        "pg": "^7.11.0",
        "pg-hstore": "^2.3.3",
        "sequelize": "^5.8.12",
        "sequelize-cli": "^5.5.0",
        "sinon-chai": "^3.3.0",
        "swagger-ui-express": "^4.0.6",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.4.4",
        "@babel/core": "^7.4.5",
        "@babel/node": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
        "@babel/polyfill": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "@babel/register": "^7.4.4",
        "coveralls": "^3.0.4",
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^5.1.0",
        "eslint-plugin-import": "^2.18.0",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^2.5.0",
        "mocha": "^6.1.4",
        "nodemon": "^1.19.1",
        "nyc": "^14.1.1",
        "prettier": "^1.18.2",
        "prettier-eslint": "^9.0.0",
        "prettier-eslint-cli": "^5.0.0",
        "sinon": "^7.3.2"
    }
}
